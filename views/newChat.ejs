<%- layout(`/layouts/boilerplate`) %>

    <body>
        <h2 class="new-chat-head">Create a new chat!</h2>
        <div class="new-chat-container">
            <form method="post" action="/chats">
                <input type="text" placeholder="Sender's name" name="from" class="sender"> <br><br>
                <input type="text" placeholder="Receiver's name" name="to" class="receiver"> <br><br>
                <textarea name="message" rows="15" cols="80" class="message"
                    placeholder="Write your message here..."></textarea>
                <br>
                <button type="submit" class="create-btn">Create</button>
            </form>
        </div>

    </body>

    </html>