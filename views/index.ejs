<%- layout(`/layouts/boilerplate`) %>

    <body>

        <div class="container mt-4">
            <div class="d-flex justify-content-between mb-3">
                <h2><i>"Connect, Converse, Continue â€“ All in One Place."</i></h2>
                <a href="/chats/new" class="btn btn-success">+ New Chat</a>
            </div>

            <% if (chats.length===0) { %>
                <div class="alert alert-warning">No chats found.</div>
                <% } %>

                    <div class="row">
                        <% for (let chat of chats) { %>
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card shadow-sm">
                                    <div class="card-body">
                                        <h5 class="card-title">From: <i>
                                                <%= chat.from %>
                                            </i></h5>
                                        <h6 class="card-subtitle mb-2 text-muted">To: <i>
                                                <%= chat.to %>
                                            </i></h6>
                                        <p class="card-text"><strong>Message:</strong>
                                            <%= chat.message %>
                                        </p>

                                        <p class="text-muted mb-1">
                                            <small>Created at: <%= chat.created_at.toLocaleTimeString() %>, <%=
                                                        chat.created_at.toDateString() %></small><br>
                                            <small>Updated at: <%= chat.updated_at.toLocaleTimeString() %>, <%=
                                                        chat.updated_at.toDateString() %></small>
                                        </p>

                                        <div class="d-flex justify-content-between mt-3">
                                            <form method="GET" action="/chats/<%= chat._id %>/edit">
                                                <button class="btn btn-outline-primary btn-sm">Edit</button>
                                            </form>

                                            <form method="POST" action="/chats/<%= chat._id %>?_method=DELETE">
                                                <button class="btn btn-outline-danger btn-sm"
                                                    type="submit">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                    </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    </body>

    </html>